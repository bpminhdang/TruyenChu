<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lin">

        <LinearLayout
            android:id="@+id/linn"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="35dp"> <!-- Đặt giá trị radius bằng một nửa của kích thước chiều rộng hoặc chiều cao -->

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:scaleType="fitCenter"
                    android:src="@drawable/_4c794a30247c154fd3afa0ff7f61b57" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="15dp"
                android:paddingTop="20dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome back"
                    android:textAllCaps="true"
                    android:textColor="#86787878"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-thin"
                    android:text="Ariana Grinder"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="95dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/linn">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal"
                android:paddingLeft="30dp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="26dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/pr_history" />

                <TextView
                    android:id="@+id/xem"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="228dp"
                    android:text="Truyện đã xem"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tai"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Truyện đã tải" />
            </LinearLayout>

            <TextView
                android:id="@+id/lichsu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="sans-serif-light"
                android:paddingLeft="10dp"
                android:text="LỊCH SỬ TRÊN TÀI KHOẢN"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/csbm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Chính sách bảo mật" />

            <TextView
                android:id="@+id/share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Chia sẻ" />

            <TextView
                android:id="@+id/guimail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Góp ý - Liên hệ" />

            <TextView
                android:id="@+id/gopy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Đánh giá ứng dụng" />

            <TextView
                android:id="@+id/thongtin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="THÔNG TIN"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/mau"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Màu yêu thích" />

            <TextView
                android:id="@+id/giaodien"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Giao diện đọc truyện" />

            <TextView
                android:id="@+id/setting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="CÀI ĐẶT"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/bstt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Bộ sưu tập yêu thích" />

            <TextView
                android:id="@+id/bst"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Bộ sưu tập của tôi" />

            <TextView
                android:id="@+id/dstruyen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="DANH SÁCH TRUYỆN"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/theodoi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Truyện đã theo dõi" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>