<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#000000">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="Thiết Lập Giao Diện"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/setting_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.008"
        app:srcCompat="@drawable/r_quit" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/maunen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10">

        <TextView
            android:id="@+id/tx_maunen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:paddingTop="5sp"
            android:text="Màu Nền"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.003"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cus_maunen"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/cus_maunen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="sans-serif-light"
            android:text="Màu Nền"
            android:textAllCaps="true"
            android:textColor="#86787878"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.003"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.992"
            app:layout_constraintStart_toEndOf="@+id/tx_maunen"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <Button
                android:id="@+id/col_white"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="24dp"
                android:layout_height="35dp"
                android:backgroundTint="#FAFAFA" />

            <Button
                android:id="@+id/col_black"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="24dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:backgroundTint="#000000" />

            <Button
                android:id="@+id/col_lightgrey"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="24dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:backgroundTint="#E2E2E2" />

            <Button
                android:id="@+id/col_warmbeige"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="24dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:backgroundTint="#f3dcba" />

            <Button
                android:id="@+id/col_offwhite"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="24dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:backgroundTint="#fff9ef" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/kichthuoctx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mauchu">

        <TextView
            android:id="@+id/cus_kichthuoc_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="sans-serif-light"
            android:text="Kích thước chữ"
            android:textAllCaps="true"
            android:textColor="#86787878"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.003"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tx_kichthuoc_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:paddingTop="5sp"
            android:text="Kích Thước"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.003"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cus_kichthuoc_tx"
            app:layout_constraintVertical_bias="0.0" />

        <LinearLayout
            android:id="@+id/resize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.994"
            app:layout_constraintStart_toEndOf="@+id/tx_kichthuoc_tx"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.545">

            <Button
                android:id="@+id/cus_tang"
                android:layout_width="56dp"
                android:layout_height="35dp"
                android:text="+"
                android:textSize="12sp" />

            <Button
                android:id="@+id/cus_giam"
                android:layout_width="56dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="-"
                android:textSize="12sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/kichthuocln"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/kichthuoctx">

        <TextView
            android:id="@+id/cus_kichthuoc_ln"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="sans-serif-light"
            android:text="Kích thước dòng"
            android:textAllCaps="true"
            android:textColor="#86787878"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.003"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tx_kichthuoc_ln"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:paddingTop="5sp"
            android:text="Kích Thước"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.003"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cus_kichthuoc_ln"
            app:layout_constraintVertical_bias="0.0" />

        <LinearLayout
            android:id="@+id/resizeln"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.994"
            app:layout_constraintStart_toEndOf="@+id/tx_kichthuoc_ln"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.545">

            <Button
                android:id="@+id/cus_tangln"
                android:layout_width="56dp"
                android:layout_height="35dp"
                android:text="+"
                android:textSize="12sp" />

            <Button
                android:id="@+id/cus_giamln"
                android:layout_width="56dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="-"
                android:textSize="12sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mauchu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/maunen">

        <TextView
            android:id="@+id/tx_mauchu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:paddingTop="5sp"
            android:text="Màu Chữ"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.003"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cus_mauchu"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/cus_mauchu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="sans-serif-light"
            android:text="Màu Chữ"
            android:textAllCaps="true"
            android:textColor="#86787878"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.003"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/colorchu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.992"
            app:layout_constraintStart_toEndOf="@+id/tx_mauchu"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <Button
                android:id="@+id/coltx_white"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="24dp"
                android:layout_height="35dp"
                android:backgroundTint="#FAFAFA" />

            <Button
                android:id="@+id/coltx_black"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="24dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:backgroundTint="#000000" />

            <Button
                android:id="@+id/coltx_lightgrey"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="24dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:backgroundTint="#E2E2E2" />

            <Button
                android:id="@+id/coltx_warmbeige"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="24dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:backgroundTint="#f3dcba" />

            <Button
                android:id="@+id/coltx_lblue"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="24dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:backgroundTint="#DCF2F1 " />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="409dp"
        android:layout_height="521dp"
        android:background="@color/accent_1_10"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/kichthuocln"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/kichthuocln"
            app:layout_constraintVertical_bias="0.031">

            <TextView
                android:id="@+id/cus_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="sans-serif-light"
                android:paddingTop="0dp"
                android:text="Kiểu Chữ"
                android:textAllCaps="true"
                android:textColor="#86787878"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.003"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="17dp"
                android:paddingTop="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cus_font"
                app:layout_constraintVertical_bias="0.0">

                <TextView
                    android:id="@+id/helveticaneue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helveticaneue"
                    android:paddingTop="10dp"
                    android:text="HelveticaNeue"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/arial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arial"
                    android:paddingTop="20sp"
                    android:text="Arial"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/avenir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avenirnextltpro_regular"
                    android:paddingTop="20sp"
                    android:text="AvenirNext"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/times"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/timesnewroman"
                    android:paddingTop="20sp"
                    android:text="TimesNewRoman"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/georgia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/georgia"
                    android:paddingTop="20sp"
                    android:text="Georgia"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/roboto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:paddingTop="20sp"
                    android:text="Roboto"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/centur"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/utm_centur"
                    android:paddingTop="20sp"
                    android:text="UTM-Centur"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/uvnvan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/uvn_van"
                    android:paddingTop="20sp"
                    android:text="UVNVan"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/monts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:paddingTop="20sp"
                    android:text="Montserrat"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/literata"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/literatabook"
                    android:paddingTop="20sp"
                    android:text="Literata"
                    android:textSize="20sp" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>