<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_nested_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/accent_1_10"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.HomeFragment">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="0.5"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center_vertical"
                android:paddingEnd="20dp"
                android:text="Các thể loại truyện nổi bật"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/home_bt_more_genres"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/home_bt_more_genres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@android:color/transparent"
                android:drawableEnd="@drawable/more_svg"
                android:drawableTint="@color/accent_3_400"
                android:fontFamily="@font/montserrat_semibold"
                android:paddingLeft="0dp"
                android:paddingEnd="10dp"
                android:paddingRight="0dp"
                android:text="Xem thêm"
                android:textColor="@color/accent_3_500"
                android:textSize="13dp"
                app:iconPadding="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingTop="6dp"
                android:paddingRight="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintVertical_bias="0.083">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        app:cardBackgroundColor="@color/accent_1_100"
                        app:cardCornerRadius="10dp">

                        <Button
                            android:id="@+id/button9"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_bold"
                            android:text="Ngôn tình"
                            android:textAllCaps="false"
                            android:textColor="@color/accent_1_800" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        app:cardBackgroundColor="@color/accent_1_100"
                        app:cardCornerRadius="@dimen/buttonCornerRadius">

                        <Button
                            android:id="@+id/button10"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_bold"
                            android:text="Sủng"
                            android:textAllCaps="false"
                            android:textColor="@color/accent_1_800" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        app:cardBackgroundColor="@color/accent_1_100"
                        app:cardCornerRadius="10dp">

                        <Button
                            android:id="@+id/button12"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_bold"
                            android:text="Xuyên không"
                            android:textAllCaps="false"
                            android:textColor="@color/accent_1_800" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        app:cardBackgroundColor="@color/accent_1_100"
                        app:cardCornerRadius="10dp">

                        <Button
                            android:id="@+id/button13"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_bold"
                            android:text="Tiên hiệp"
                            android:textAllCaps="false"
                            android:textColor="@color/accent_1_800" />
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        app:cardBackgroundColor="@color/accent_1_100"
                        app:cardCornerRadius="10dp">

                        <Button
                            android:id="@+id/button14"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_bold"
                            android:text="Trọng sinh"
                            android:textAllCaps="false"
                            android:textColor="@color/accent_1_800" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        app:cardBackgroundColor="@color/accent_1_100"
                        app:cardCornerRadius="10dp">

                        <Button
                            android:id="@+id/button15"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_bold"
                            android:text="Ngược"
                            android:textAllCaps="false"
                            android:textColor="@color/accent_1_800" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- The loai truyen noi bat -->

        <!-- Moi dang -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lilay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout">


            <TextView
                android:id="@+id/tvMoiDang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="0.5"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center_vertical"
                android:text="Mới đăng"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/home_recycler_view"
                app:layout_constraintEnd_toStartOf="@+id/home_bt_more_new"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/home_bt_more_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@android:color/transparent"
                android:drawableEnd="@drawable/more_svg"
                android:drawableTint="@color/accent_3_400"
                android:fontFamily="@font/montserrat_semibold"
                android:paddingLeft="0dp"
                android:paddingEnd="10dp"
                android:paddingRight="0dp"
                android:text="Xem thêm"
                android:textAlignment="viewStart"
                android:textColor="@color/accent_3_500"
                android:textSize="13dp"
                app:iconPadding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/home_recycler_view"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:background="@color/accent_1_10"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_bt_more_new" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lilmcn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lilay">

            <TextView
                android:id="@+id/tvMoiCapNhat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="0.5"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center_vertical"
                android:text="Mới cập nhật"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/home_recycler_view_2"
                app:layout_constraintEnd_toStartOf="@+id/home_bt_more_update"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/home_bt_more_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@android:color/transparent"
                android:drawableEnd="@drawable/more_svg"
                android:drawableTint="@color/accent_3_400"
                android:fontFamily="@font/montserrat_semibold"
                android:paddingLeft="0dp"
                android:paddingEnd="10dp"
                android:paddingRight="0dp"
                android:text="Xem thêm"
                android:textColor="@color/accent_3_500"
                android:textSize="13dp"
                app:iconPadding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/home_recycler_view_2"
                android:layout_width="0dp"
                android:layout_height="220dp"
                android:background="@color/accent_1_10"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_bt_more_update" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lilddgd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lilmcn">

            <TextView
                android:id="@+id/tvDaDocGanDay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="0.5"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center_vertical"
                android:text="Đã đọc gần đây"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/home_recycler_view_3"
                app:layout_constraintEnd_toStartOf="@+id/home_bt_more_recent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/home_bt_more_recent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@android:color/transparent"
                android:drawableEnd="@drawable/more_svg"
                android:drawableTint="@color/accent_3_400"
                android:fontFamily="@font/montserrat_semibold"
                android:paddingLeft="0dp"
                android:paddingEnd="10dp"
                android:paddingRight="0dp"
                android:text="Xem thêm"
                android:textColor="@color/accent_3_500"
                android:textSize="13dp"
                app:iconPadding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/home_recycler_view_3"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:background="@color/accent_1_10"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_bt_more_recent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="Vuốt xuống để cập nhật"
            android:textColor="@color/accent_2_400"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView3231"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_upward"
            android:tint="@color/accent_2_400"
            app:layout_constraintBottom_toTopOf="@+id/textView11"
            app:layout_constraintEnd_toEndOf="@+id/textView11"
            app:layout_constraintStart_toStartOf="@+id/textView11" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>